{
  "include": ["./packages/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "paths": {
      "engine/Store": ["node_modules/@micro-snake/engine/src/gameStore.ts"],
      "apple/Apple": ["node_modules/@micro-snake/plugin-apple/app.tsx"],
      "plum/Plum": ["node_modules/@micro-snake/plugin-plum/app.tsx"],
      "tomato/Tomato": ["node_modules/@micro-snake/plugin-tomato/app.tsx"],
      "snake/GameStore": [
        "node_modules/@micro-snake/game/src/store/gameStore.ts"
      ]
    }
  },
  "experimentalDecorators": true
}
